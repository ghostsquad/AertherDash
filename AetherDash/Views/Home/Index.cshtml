@{
    ViewBag.Title = "AetherDash";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Dashboard</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="dash-status-group">
                <div class="dash-status dash-status-ok"></div>
                <div class="dash-status"><span>Overall State</span></div>
            </div>
            <div class="dash-status-group">
                <div class="dash-status dash-status-warning"></div>
                <div class="dash-status"><span>Resource X: Warning State</span></div>
            </div>
            <div class="dash-status-group">
                <div class="dash-status dash-status-critical"></div>
                <div class="dash-status"><span>Resource Y: Critical State</span></div>
            </div>
        </div>
    </div>
</div>